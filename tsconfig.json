{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"],
			"@/config/*": ["./config/*"],
			"@/middleware/*": ["./middleware/*"],
			"@/controllers/*": ["./controllers/*"],
			"@/routes/*": ["./routes/*"],
			"@/utils/*": ["./utils/*"],
			"@/types/*": ["./types/*"]
		},
		"declaration": true,
		"sourceMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
